        = render :partial => '/layouts/navigation', :locals => {:object => current_page(params)}
    %section#content.clearfix
      = yield
    %section#footer
      %footer.clearfix
        = render :partial => '/layouts/navigation', :locals => {:object => current_page(params)}
        %ul#social.clearfix
          %li= link_to "Follow me on Twitter", 'http://www.twitter.com/Sparkmasterflex', {:class => 'twitter hidden', :rel => 'external', :title => "Follow me on Twitte"}
