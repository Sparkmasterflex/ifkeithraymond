.leftcol
  %h2 Content
  - form_for @webpage, :url => webpages_path, :html => {:method => :post, :multipart => true} do |f|
    = render :partial => 'form', :locals => {:f => f}
    .formfield
      = f.submit "Create Webpage"
.rightcol
  #page-images
    %h3 Project Images
    = render :partial => "/images/slideshow_edit", :locals => {:object => @webpage}