- content_for :jstemplates do
  = raw %(var new_image="#{generate_template(f, :images, :partial => "/images/image_field", :form_builder_local => :img)}")
.formfield
  = f.label :category
  = f.select :category, Blog::Categories.options_for_select
.formfield
  = f.label :title, "Blog Title"
  = f.text_field :title
.formfield
  = f.label :text, "Blog Entry"
  = f.text_area :text, :size => '50x20'
  = f.hidden_field :author, :value => @current_user.id
#images
  %h4 Images
= link_to 'Add an Image', '#image', {:class => "add icon add_nested_item", "data-update" => "images", "data-template" => "new_image", :title => "Add an Image"}